## Objects usage
publicObjectLowMark = 4096
objectHighMark = 16384

## Maximum open file descriptors
maxDiskEntries = 512

## Maximum size of on-disk cache entry
maxDiskCacheEntrySize = 4194304

## Tuning cache expiration
maxAge = 14d
