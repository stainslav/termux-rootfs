## Log to file
logSyslog = false
logFile = "/data/data/com.termux/files/usr/var/log/polipo.log"
logFilePermissions = 600
logLevel = 0xFF
scrubLogs = true

## Directory with on-disk cache
diskCacheRoot = /data/data/com.termux/files/usr/var/lib/polipo

disableIndexing = false
disableServersList = false

## Share cache
cacheIsShared = true

## Don't cache cookies
dontCacheCookies = true

## Chunk usage
chunkLowMark = 33554432
