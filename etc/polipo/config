## Run as daemon
daemonise = true

## Bind to this address
proxyAddress = 0.0.0.0

## Offline browsing
proxyOffline = false

## Maximum number of connections per server
serverSlots = 8

## Maximum number of connections per broken server
serverMaxSlots = 12

## Disable local configuration interface
disableLocalInterface = true
